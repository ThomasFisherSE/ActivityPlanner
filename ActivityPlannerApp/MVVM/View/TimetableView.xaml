<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ActivityPlannerApp.MVVM.View"
             xmlns:viewmodel="clr-namespace:ActivityPlannerApp.MVVM.ViewModel"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             x:Class="ActivityPlannerApp.MVVM.View.TimetableView"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="GridCellBorderStyle"
               TargetType="{x:Type Border}">
            <Setter Property="Background"
                    Value="#232528" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
        </Style>

        <Style x:Key="HeaderTextBlockStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>

        <Style x:Key="TimetableEntryTextBlockStyle"
               TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize"
                    Value="12" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
    </UserControl.Resources>


    <syncfusion:SfScheduler x:Name="Scheduler"
                            ItemsSource="{Binding TimetableEntries}"
                            ViewType="Week"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
        <syncfusion:SfScheduler.AppointmentMapping>
            <syncfusion:AppointmentMapping Subject="Content"
                                           StartTime="From"
                                           EndTime="To"
                                           AppointmentBackground="Brush" />
        </syncfusion:SfScheduler.AppointmentMapping>
    </syncfusion:SfScheduler>
</UserControl>
